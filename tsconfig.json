{
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "lib",
		"target": "ES6",
		"declaration": true,
		"sourceMap": true,
		"removeComments": true,
		"strict": true,
		"noErrorTruncation": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"preserveConstEnums": true,
		"allowJs": false,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts",
		"test/**/*.ts",
		"typings/**/*.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
